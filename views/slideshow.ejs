<link rel="stylesheet" type="text/css" href="/<%= deck._id %>/template.css" /> 
<script type="text/javascript">
  $(function() {
      var socket = io.connect();
      socket.on('next', function(){
	$.deck('next');
      });
      socket.on('prev', function() {
	$.deck('prev');
    });
</script>

<% title = deck.title %>

<% 
	var slides = [];
	if (typeof slideID != "undefined") {
		for (var i = 0; i < deck.slides.length; i++) {
			if (deck.slides[i]._id == slideID) {
				slides = [deck.slides[i]];
			}
		}
	}
	
	if (!slides.length) {
		slides = deck.slides;
	}
%>

<%- partial('slide', slides) %>
